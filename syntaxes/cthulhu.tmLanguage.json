{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "cthulhu",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#variables" },
		{ "include": "#digits" },
		{ "include": "#attributes" },
		{ "include": "#function" },
		{ "include": "#parameters" },
		{ "include": "#comments" },
		{ "include": "#call" },
		{ "include": "#bools" }
	],
	"repository": {
		"expression": {
			"patterns": [
				{ "include": "#strings" },
				{ "include": "#digits" },
				{ "include": "#call" },
				{ "include": "#bools" }
			]
		},
		"function": {
			"match": "\\b(def) \\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
			"captures": {
				"1": { "name": "keyword.operator.new"},
				"2": { "name": "support.function" }
			}
		},
		"call": {
			"begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b[ ]*\\(",
			"end": "\\)",
			"patterns": [
				{ "include": "#expression" }
			],
			"captures": {
				"1": { "name": "support.function" }
			}
		},
		"parameters": {
			"patterns": [
				{ 
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b[ ]*:[ ]*\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": { "name": "variable.parameter" },
						"2": { "name": "support.type" }
					}
				},
				{
					"match": "\\$([ ]*:[ ]*)\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"2": { "name": "support.type" }
					}
				}
			]
		},
		"identifier": {
			"patterns": [
				{ "name": "support.variable", "match": "\\$" },
				{ "name": "support.variable", "match": "[a-zA-Z_][a-zA-Z0-9_]*" }
			]
		},
		"variables": {
			"name": "keyword.operator.new",
			"match": "\\b(var|final)\\b"
		},
		"attributes": {
			"name": "storage",
			"match": "export"
		},
		"keywords": {
			"name": "keyword.control.cthulhu",
			"match": "\\b(if|while|for|return)\\b"
		},
		"digits": {
			"patterns": [
				{ "name": "constant.numeric", "match": "[0-9]+" },
				{ "name": "constant.numeric", "match": "0b[01]+" },
				{ "name": "constant.numeric", "match": "0x[0-9a-fA-F]+" }
			]
		},
		"bools": {
			"match": "true|false",
			"name": "constant.language"
		},
		"comments": {
			"name": "comment.line.double-slash",
			"match": "//.*"
		},
		"strings": {
			"name": "string.quoted.double.cthulhu",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{ "name": "constant.character.escape.cthulhu", "match": "\\\\." }
			]
		}
	},
	"scopeName": "source.ctu"
}